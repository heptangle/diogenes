{
  "manifest_version": 3,
  "name": "Diogenes1: AI emission tracker",
  "version": "0.0.1",
  "description": "Estimate kWh and CO2 emissions while using AI services.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "*://*.openai.com/*",
    "*://chatgpt.com/*",
    "*://*.claude.ai/*",
    "*://gemini.google.com/*",
    "*://*.perplexity.ai/*",
    "*://copilot.microsoft.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    }
  }
}
